<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="8dp"
    android:paddingTop="8dp" >

    <ImageView
        android:id="@+id/lv_sliding_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:paddingLeft="8dp"
        android:src="@drawable/place" />

    <TextView
        android:id="@+id/lv_sliding_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/lv_sliding_place"
        android:text="天津"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/lv_sliding_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="32dp"
        android:text="5℃"
        android:textColor="@drawable/lv_sliding_color_selector"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/lv_sliding_delete"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        
        android:src="@drawable/ic_action_discard"
        android:tint="#000"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/lv_sliding_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:layout_toLeftOf="@+id/lv_sliding_temperature"
        android:text="多云"
        android:textColor="@drawable/lv_sliding_color_selector"
        android:textSize="16sp" />

</RelativeLayout>